@model Transport_system_prototype.Models.Vehicle

@{
    ViewData["Title"] = "Add New Vehicle";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Add New Vehicle</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Type" class="form-label">Vehicle Type</label>
                            <select asp-for="Type" class="form-select">
                                <option value="">-- Select Vehicle Type --</option>
                                <option value="Bus">Bus</option>
                                <option value="Train">Train</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Vehicle Class</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter class (e.g., Luxury, Comfort, Express)" />
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NumberOfSeats" class="form-label">Number of Seats</label>
                            <div class="seat-selector">
                                <div class="seat-input-container">
                                    <input asp-for="NumberOfSeats" type="number" min="1" max="100" class="form-control seat-input" value="30" />
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="card h-100">
                                    <div class="card-header">
                                        <h5 class="mb-0">Amenities</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-check mb-2">
                                            <input asp-for="TV" class="form-check-input" />
                                            <label asp-for="TV" class="form-check-label">
                                                <i class="bi bi-tv me-1"></i> TV Available
                                            </label>
                                        </div>

                                        <div class="form-check mb-2">
                                            <input asp-for="AirConditioning" class="form-check-input" />
                                            <label asp-for="AirConditioning" class="form-check-label">
                                                <i class="bi bi-snow me-1"></i> Air Conditioning
                                            </label>
                                        </div>

                                        <div class="form-check mb-2">
                                            <input asp-for="WiFi" class="form-check-input" />
                                            <label asp-for="WiFi" class="form-check-label">
                                                <i class="bi bi-wifi me-1"></i> WiFi Available
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="card h-100">
                                    <div class="card-header">
                                        <h5 class="mb-0">Refreshments</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-check mb-2">
                                            <input asp-for="Drinks" class="form-check-input" />
                                            <label asp-for="Drinks" class="form-check-label">
                                                <i class="bi bi-cup-straw me-1"></i> Drinks Available
                                            </label>
                                        </div>

                                        <div class="form-check mb-2">
                                            <input asp-for="Snacks" class="form-check-input" />
                                            <label asp-for="Snacks" class="form-check-label">
                                                <i class="bi bi-basket me-1"></i> Snacks Available
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ImageFile">Upload Vehicle Image</label>
                            <input asp-for="ImageFile" type="file" class="form-control" />
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-plus-circle"></i> Create Vehicle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Seat Selector Styles */
    .seat-selector {
        position: relative;
    }

    .seat-input-container {
        display: flex;
        align-items: center;
    }

    .seat-input {
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
    }

    .seat-toggle {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 38px;
        background-color: #f8f9fa;
        border: 1px solid #ced4da;
        border-left: none;
        border-top-right-radius: 0.375rem;
        border-bottom-right-radius: 0.375rem;
        cursor: pointer;
    }

        .seat-toggle:hover {
            background-color: #e9ecef;
        }

    .seat-dropdown {
        position: absolute;
        top: calc(100% + 5px);
        left: 0;
        width: 100%;
        background-color: #ffffff;
        border-radius: 0.5rem;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        border: 1px solid #e5e7eb;
        z-index: 10;
        display: none;
    }

        .seat-dropdown.show {
            display: block;
        }

    .seat-options-header {
        padding: 0.75rem 1rem;
        font-size: 0.75rem;
        font-weight: 600;
        color: #64748b;
        background-color: #f9fafb;
        border-bottom: 1px solid #e5e7eb;
    }

    .seat-options {
        max-height: 250px;
        overflow-y: auto;
    }

    .seat-option {
        display: flex;
        align-items: center;
        padding: 0.75rem 1rem;
        cursor: pointer;
        border-bottom: 1px solid #f1f5f9;
    }

        .seat-option:hover {
            background-color: rgba(59, 130, 246, 0.05);
        }

    .seat-option-icon {
        width: 36px;
        height: 36px;
        background-color: rgba(59, 130, 246, 0.1);
        color: #3b82f6;
        border-radius: 0.375rem;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 0.75rem;
        font-size: 1.125rem;
    }

    .seat-option-details {
        flex: 1;
    }

    .seat-option-name {
        font-weight: 500;
        font-size: 0.875rem;
        color: #1e293b;
    }

    .seat-option-count {
        font-size: 0.75rem;
        color: #64748b;
    }

    .seat-custom {
        padding: 1rem;
        border-top: 1px solid #e5e7eb;
    }

    .seat-custom-controls {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 0.75rem;
    }

    .seat-control-btn {
        width: 36px;
        height: 36px;
        border-radius: 0.375rem;
        border: 1px solid #e5e7eb;
        background-color: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }

        .seat-control-btn:hover {
            background-color: #e9ecef;
        }

    .seat-custom-count {
        width: 60px;
        text-align: center;
        font-weight: 600;
        font-size: 1.125rem;
        margin: 0 0.75rem;
    }

    .seat-apply-btn {
        width: 100%;
        padding: 0.5rem;
        background-color: #3b82f6;
        color: white;
        border: none;
        border-radius: 0.375rem;
        font-weight: 500;
        cursor: pointer;
    }

        .seat-apply-btn:hover {
            background-color: #2563eb;
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Seat selector functionality
            const seatInput = document.querySelector('.seat-input');
            const seatToggle = document.getElementById('seatToggle');
            const seatDropdown = document.getElementById('seatDropdown');
            const seatOptions = document.querySelectorAll('.seat-option');
            const decrementBtn = document.getElementById('decrementSeats');
            const incrementBtn = document.getElementById('incrementSeats');
            const customSeatCount = document.getElementById('customSeatCount');
            const applyCustomSeatsBtn = document.getElementById('applyCustomSeats');

            // Initialize custom seat count
            if (customSeatCount) {
                customSeatCount.textContent = seatInput.value;
            }

            // Toggle dropdown
            if (seatToggle) {
                seatToggle.addEventListener('click', function(e) {
                    e.stopPropagation();
                    seatDropdown.classList.toggle('show');
                });
            }

            // Close dropdown when clicking outside
            if (seatDropdown) {
                document.addEventListener('click', function(e) {
                    if (!seatToggle.contains(e.target) && !seatDropdown.contains(e.target)) {
                        seatDropdown.classList.remove('show');
                    }
                });
            }

            // Seat options
            if (seatOptions.length > 0) {
                seatOptions.forEach(option => {
                    option.addEventListener('click', function() {
                        const seatCount = this.getAttribute('data-seats');
                        seatInput.value = seatCount;
                        customSeatCount.textContent = seatCount;
                        seatDropdown.classList.remove('show');
                    });
                });
            }

            // Decrement seats
            if (decrementBtn) {
                decrementBtn.addEventListener('click', function() {
                    let count = parseInt(customSeatCount.textContent);
                    if (count > 1) {
                        count--;
                        customSeatCount.textContent = count;
                    }
                });
            }

            // Increment seats
            if (incrementBtn) {
                incrementBtn.addEventListener('click', function() {
                    let count = parseInt(customSeatCount.textContent);
                    if (count < 100) {
                        count++;
                        customSeatCount.textContent = count;
                    }
                });
            }

            // Apply custom seats
            if (applyCustomSeatsBtn) {
                applyCustomSeatsBtn.addEventListener('click', function() {
                    seatInput.value = customSeatCount.textContent;
                    seatDropdown.classList.remove('show');
                });
            }

            // Update custom count when input changes
            seatInput.addEventListener('input', function() {
                let value = parseInt(this.value);
                if (value < 1) value = 1;
                if (value > 100) value = 100;
                if (customSeatCount) {
                    customSeatCount.textContent = value;
                }
            });
        });
    </script>
}