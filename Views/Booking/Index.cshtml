@model IEnumerable<Transport__system_prototype.Models.Booking>
@{
    ViewData["Title"] = "Booking Management";
    var today = DateTime.Today;
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Booking Management</h1>
        <div>
            <button class="btn btn-outline-secondary me-2" id="exportBtn">
                <i class="fas fa-file-export me-2"></i>Export
            </button>
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>New Booking
            </a>
        </div>
    </div>

    <!-- Admin Dashboard Summary -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-primary bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total Bookings</h6>
                            <h3 class="mb-0">@Model.Count()</h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="fas fa-ticket-alt text-primary fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-success bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                            <i class="fas fa-check-circle text-success fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-warning bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Pending Payments</h6>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded">
                            <i class="fas fa-clock text-warning fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-info bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Today's Bookings</h6>
                            <h3 class="mb-0">@Model.Count(b => b.BookingDate.Date == today)</h3>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded">
                            <i class="fas fa-calendar-day text-info fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">Filters</h5>
            <form id="filterForm" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Status</label>
                    <select class="form-select" id="statusFilter">
                        <option value="">All Statuses</option>
                        <option value="paid">Paid</option>
                        <option value="pending">Pending</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Date Range</label>
                    <select class="form-select" id="dateFilter">
                        <option value="">All Time</option>
                        <option value="today">Today</option>
                        <option value="week">This Week</option>
                        <option value="month">This Month</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Client</label>
                    <input type="text" class="form-control" id="clientFilter" placeholder="Search by client name">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-filter me-2"></i>Apply Filters
                    </button>
                    <button type="reset" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Clear
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Bookings Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="bookingsTable">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="selectAll">
                                    </div>
                                </th>
                                <th>ID</th>
                                <th>Client</th>
                                <th>Trip Details</th>
                                <th>Booking Date</th>
                                <th>Seats</th>
                                <th>Total Price</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="form-check">
                                            <input class="form-check-input booking-checkbox" type="checkbox" value="@booking.Id">
                                        </div>
                                    </td>
                                    <td>@booking.Id</td>
                                    <td>
                                        <div>
                                            @if (booking.Client != null)
                                            {
                                                <div class="fw-bold">@booking.Client.User.UserName</div>
                                                <div class="small text-muted">@booking.Client.User.Email</div>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        @if (booking.Trip != null)
                                        {
                                            <div>
                                                <div class="fw-bold">@booking.Trip.FromStation?.Name to @booking.Trip.TOStation?.Name</div>
                                                <div class="small text-muted">
                                                    @booking.Trip.TripDate.ToString("MMM dd, yyyy") | @booking.Trip.vehicle?.Name
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <span>Trip details not available</span>
                                        }
                                    </td>
                                    <td>@booking.BookingDate.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>@booking.NumberOfSeats</td>
                                    <td>$@booking.ComputedTotalPrice.ToString("0.00")</td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                Actions
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#viewDetailsModal" data-booking-id="@booking.Id">
                                                        <i class="fas fa-eye me-2"></i>View Details
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="#" onclick="sendConfirmationEmail(@booking.Id)">
                                                        <i class="fas fa-envelope me-2"></i>Send Confirmation
                                                    </a>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <a class="dropdown-item text-danger" href="@Url.Action("Delete", new { id = booking.Id })">
                                                        <i class="fas fa-trash-alt me-2"></i>Delete
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Bulk Actions -->
                <div class="p-3 border-top d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <span class="me-2">With selected:</span>
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-secondary" id="bulkEmailBtn" disabled>
                                <i class="fas fa-envelope me-1"></i>Send Email
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-danger" id="bulkDeleteBtn" disabled>
                                <i class="fas fa-trash-alt me-1"></i>Delete
                            </button>
                        </div>
                    </div>

                    <!-- Pagination -->
                    <nav aria-label="Bookings pagination">
                        <ul class="pagination mb-0">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
            else
            {
                <div class="alert alert-info m-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-info-circle text-primary me-3 fs-4"></i>
                        <div>
                            <h5 class="mb-1">No bookings found</h5>
                            <p class="mb-0">There are no bookings in the system yet.</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- View Details Modal -->
<div class="modal fade" id="viewDetailsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content border-0 shadow">
            <div class="modal-header">
                <h5 class="modal-title">Booking Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="bookingDetailsContent">
                    <!-- Details will be loaded here -->
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="printDetailsBtn">
                    <i class="fas fa-print me-2"></i>Print
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Select all functionality
            const selectAllCheckbox = document.getElementById('selectAll');
            const bookingCheckboxes = document.querySelectorAll('.booking-checkbox');
            const bulkEmailBtn = document.getElementById('bulkEmailBtn');
            const bulkDeleteBtn = document.getElementById('bulkDeleteBtn');

            selectAllCheckbox.addEventListener('change', function() {
                const isChecked = this.checked;
                bookingCheckboxes.forEach(checkbox => {
                    checkbox.checked = isChecked;
                });
                updateBulkButtons();
            });

            bookingCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', updateBulkButtons);
            });

            function updateBulkButtons() {
                const checkedCount = document.querySelectorAll('.booking-checkbox:checked').length;
                bulkEmailBtn.disabled = checkedCount === 0;
                bulkDeleteBtn.disabled = checkedCount === 0;
            }

            // Filter form
            const filterForm = document.getElementById('filterForm');
            filterForm.addEventListener('submit', function(e) {
                e.preventDefault();
                // Implement filtering logic here
                alert('Filtering functionality would be implemented here');
            });

            filterForm.addEventListener('reset', function() {
                setTimeout(() => {
                    // Implement reset logic here
                    alert('Filter reset functionality would be implemented here');
                }, 0);
            });

            // Export button
            document.getElementById('exportBtn').addEventListener('click', function() {
                alert('Export functionality would be implemented here');
            });

            // View details modal
            const viewDetailsModal = document.getElementById('viewDetailsModal');
            viewDetailsModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const bookingId = button.getAttribute('data-booking-id');
                const bookingDetailsContent = document.getElementById('bookingDetailsContent');

                // In a real application, you would fetch the booking details via AJAX
                // For now, we'll just simulate loading with a timeout
                setTimeout(() => {
                    bookingDetailsContent.innerHTML = `
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="mb-3">Booking Information</h6>
                                <div class="mb-2 d-flex justify-content-between">
                                    <span class="text-muted">Booking ID:</span>
                                    <span class="fw-bold">${bookingId}</span>
                                </div>
                                <div class="mb-2 d-flex justify-content-between">
                                    <span class="text-muted">Booking Date:</span>
                                    <span class="fw-bold">May 15, 2023 14:30</span>
                                </div>
                                <div class="mb-2 d-flex justify-content-between">
                                    <span class="text-muted">Status:</span>
                                    <span class="badge bg-success">Paid</span>
                                </div>
                                <div class="mb-2 d-flex justify-content-between">
                                    <span class="text-muted">Payment Method:</span>
                                    <span class="fw-bold">Credit Card</span>
                                </div>
                                <div class="mb-2 d-flex justify-content-between">
                                    <span class="text-muted">Number of Seats:</span>
                                    <span class="fw-bold">2</span>
                                </div>
                                <div class="mb-2 d-flex justify-content-between">
                                    <span class="text-muted">Total Price:</span>
                                    <span class="fw-bold">$99.98</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h6 class="mb-3">Client Information</h6>
                                <div class="mb-2 d-flex justify-content-between">
                                    <span class="text-muted">Name:</span>
                                    <span class="fw-bold">John Doe</span>
                                </div>
                                <div class="mb-2 d-flex justify-content-between">
                                    <span class="text-muted">Email:</span>
                                    <span class="fw-bold">john.doe@example.com</span>
                                </div>
                                <div class="mb-2 d-flex justify-content-between">
                                    <span class="text-muted">Phone:</span>
                                    <span class="fw-bold">+1 (555) 123-4567</span>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-12">
                                <h6 class="mb-3">Trip Information</h6>
                                <div class="mb-2 d-flex justify-content-between">
                                    <span class="text-muted">From:</span>
                                    <span class="fw-bold">New York</span>
                                </div>
                                <div class="mb-2 d-flex justify-content-between">
                                    <span class="text-muted">To:</span>
                                    <span class="fw-bold">Boston</span>
                                </div>
                                <div class="mb-2 d-flex justify-content-between">
                                    <span class="text-muted">Date:</span>
                                    <span class="fw-bold">May 20, 2023</span>
                                </div>
                                <div class="mb-2 d-flex justify-content-between">
                                    <span class="text-muted">Vehicle:</span>
                                    <span class="fw-bold">Express Train</span>
                                </div>
                            </div>
                        </div>
                    `;
                }, 500);
            });

            // Print details button
            document.getElementById('printDetailsBtn').addEventListener('click', function() {
                alert('Print functionality would be implemented here');
            });

            // Send confirmation email function
            window.sendConfirmationEmail = function(bookingId) {
                alert(`Confirmation email would be sent for booking #${bookingId}`);
            };
        });
    </script>
}