@{
    ViewData["Title"] = "Payment Cancelled";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <div class="bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-times-circle fa-3x"></i>
                        </div>
                    </div>

                    <h1 class="h3 mb-3">Payment Cancelled</h1>
                    <p class="text-muted mb-4">Your payment process has been cancelled. Your booking is still in the system but is not confirmed until payment is completed.</p>

                    <div class="alert alert-light border mb-4">
                        <p class="mb-0">You can try again by going to your bookings and selecting the "Pay" option.</p>
                    </div>

                    <div class="d-flex justify-content-center gap-3">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-2"></i>Return to Home
                        </a>
                        <a href="@Url.Action("Index", "Booking")" class="btn btn-primary">
                            <i class="fas fa-list me-2"></i>View All Bookings
                        </a>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted">
                    <i class="fas fa-question-circle me-1"></i>
                    If you're experiencing issues with payment, please <a href="#">contact our support team</a>.
                </p>
            </div>
        </div>
    </div>
</div>