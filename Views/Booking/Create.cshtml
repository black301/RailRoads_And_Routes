@model Transport__system_prototype.Models.Booking
@{
    ViewData["Title"] = "Confirm Booking";
    var trips = ViewBag.Trips as List<Transport_system_prototype.Models.Trip>;

    // Get the current logged-in user information
    var currentUser = ViewBag.CurrentUser as Transport__system_prototype.Models.Client;
    var isLoggedIn = currentUser != null;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Confirm Your Booking</h1>
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Home
        </a>
    </div>

    <div class="row">
        <!-- Trip Details Card -->
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-route me-2"></i>Trip Details
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Trip != null)
                    {
                        <div class="mb-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-light rounded-circle p-2 me-3">
                                    <i class="fas fa-map-marker-alt text-primary"></i>
                                </div>
                                <div>
                                    <div class="text-muted small">From</div>
                                    <div class="fw-bold">@Model.Trip.FromStation?.Name</div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center my-2">
                                <div class="border-start border-2 h-100 mx-4" style="height: 30px;"></div>
                            </div>

                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-light rounded-circle p-2 me-3">
                                    <i class="fas fa-map-marker-alt text-primary"></i>
                                </div>
                                <div>
                                    <div class="text-muted small">To</div>
                                    <div class="fw-bold">@Model.Trip.TOStation?.Name</div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3 pb-3 border-bottom">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-calendar-alt text-primary me-2"></i>
                                <span class="text-muted">Date:</span>
                                <span class="ms-auto fw-bold">@Model.Trip.TripDate.ToString("MMM dd, yyyy")</span>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-train text-primary me-2"></i>
                                <span class="text-muted">Vehicle:</span>
                                <span class="ms-auto fw-bold">@Model.Trip.vehicle?.Name</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-chair text-primary me-2"></i>
                                <span class="text-muted">Available Seats:</span>
                                <span class="ms-auto fw-bold">@Model.Trip.AvailableSeats / @Model.Trip.NumberOfSeats</span>
                            </div>
                        </div>

                        <div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-tag text-primary me-2"></i>
                                <span class="text-muted">Price per Seat:</span>
                                <span class="ms-auto fw-bold">$@Model.Trip.Price.ToString("0.00")</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Please select a trip to see details.
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Booking Form -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-ticket-alt me-2"></i>Complete Your Booking
                    </h5>
                    @if (isLoggedIn){
                        <div class="mt-2 text-success">
                            <i class="fas fa-user-check me-2"></i>Booking as @currentUser.User.UserName
                        </div>
                    }
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <input type="hidden" asp-for="TripId" value="@Model?.TripId" />

                        @if (isLoggedIn)
                        {
                            <!-- Store user ID and information for logged-in users -->
                            <input type="hidden" asp-for="ClientId" value="@currentUser.Id" />
                            <input type="hidden" name="ClientName" value="@currentUser.User?.UserName" />
                            <input type="hidden" name="ClientEmail" value="@currentUser.User?.Email" />
                            <input type="hidden" name="ClientPhone" value="@currentUser.User?.PhoneNumber" />
                        }

                        <div class="row g-3">
                            <!-- Seat Selection -->
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <h6 class="mb-3">Seat Selection</h6>

                                    <div class="mb-3">
                                        <label asp-for="NumberOfSeats" class="form-label">Number of Seats</label>
                                        <select asp-for="NumberOfSeats" class="form-select" id="seatsSelect" required>
                                            @if (Model?.Trip != null)
                                            {
                                                for (int i = 1; i <= Math.Min(5, Model.Trip.AvailableSeats); i++)
                                                {
                                                    <option value="@i">@i @(i == 1 ? "Seat" : "Seats")</option>
                                                }
                                            }
                                            else
                                            {
                                                <option value="1">1 Seat</option>
                                            }
                                        </select>
                                        <span asp-validation-for="NumberOfSeats" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Total Price</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="ComputedTotalPrice" class="form-control" readonly id="totalPrice" value="@(Model?.Trip?.Price ?? 0)" />
                                        </div>
                                        <span asp-validation-for="ComputedTotalPrice" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Personal Information -->
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <h6 class="mb-3">
                                        Personal Information
                                        @if (isLoggedIn)
                                        {
                                            <span class="badge bg-success ms-2">Account Info</span>
                                        }
                                    </h6>
                                        <!-- Display user information as plain text for logged-in users -->
                                        <div class="card bg-light mb-3">
                                            <div class="card-body">
                                                <div class="mb-3">
                                                    <div class="d-flex">
                                                        <div class="text-muted me-2"><i class="fas fa-user me-2"></i>Name:</div>
                                                        <div class="fw-bold">@currentUser.User.UserName</div>
                                                    </div>
                                                </div>
                                                <div class="mb-3">
                                                    <div class="d-flex">
                                                        <div class="text-muted me-2"><i class="fas fa-envelope me-2"></i>Email:</div>
                                                    <div class="fw-bold">@currentUser.User.Email</div>
                                                    </div>
                                                </div>
                                                <div>
                                                    <div class="d-flex">
                                                        <div class="text-muted me-2"><i class="fas fa-phone me-2"></i>Phone:</div>
                                                        <div class="fw-bold">@currentUser.User.PhoneNumber</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="small text-muted mb-3">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Your account information will be used for this booking.
                                        </div>
                                </div>
                            </div>
                        </div>

                        <!-- Payment Information -->
                        <div class="mb-4">
                            <div class="alert alert-info d-flex align-items-center">
                                <i class="fas fa-lock fs-4 me-3"></i>
                                <div>
                                    <h6 class="mb-1">Secure Payment</h6>
                                    <p class="mb-0">You will be redirected to Stripe's secure payment platform to complete your payment.</p>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center my-3">
                                <div class="d-flex align-items-center gap-3">
                                    <img src="/img/stripe-logo.png" alt="Stripe" height="30" class="d-inline-block" onerror="this.src='/placeholder.svg?height=30&width=80&text=Stripe'" />
                                    <span class="text-muted mx-2">Secured by</span>
                                    <i class="fab fa-cc-visa fa-2x text-primary"></i>
                                    <i class="fab fa-cc-mastercard fa-2x text-danger"></i>
                                    <i class="fab fa-cc-amex fa-2x text-info"></i>
                                </div>
                            </div>

                            <!-- Hidden field for payment processing -->
                            <input type="hidden" name="paymentProcessor" value="stripe" />

                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" id="termsCheck" required>
                                <label class="form-check-label" for="termsCheck">
                                    I agree to the <a href="#" data-bs-toggle="modal" data-bs-target="#termsModal">terms and conditions</a>
                                </label>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-lock me-2"></i>Continue to Secure Payment
                            </button>
                            <div class="text-center text-muted small mt-2">
                                <i class="fas fa-info-circle me-1"></i>
                                You will be redirected to complete your payment securely via Stripe
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Terms Modal -->
<div class="modal fade" id="termsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow">
            <div class="modal-header">
                <h5 class="modal-title">Terms and Conditions</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6>Booking Policy</h6>
                <p>All bookings are subject to availability. A booking is only confirmed once full payment has been received.</p>

                <h6>Cancellation Policy</h6>
                <p>Cancellations made more than 48 hours before departure will receive a full refund minus a processing fee. Cancellations within 48 hours of departure are non-refundable.</p>

                <h6>Refund Policy</h6>
                <p>Refunds will be processed within 7-14 business days to the original payment method.</p>

                <h6>Baggage Policy</h6>
                <p>Each passenger is allowed one piece of luggage and one carry-on item. Additional baggage may incur extra charges.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">I Understand</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const seatsSelect = document.getElementById('seatsSelect');
            const totalPrice = document.getElementById('totalPrice');

            // Update total price when number of seats changes
            seatsSelect.addEventListener('change', function() {
                const seats = parseInt(this.value);
                const pricePerSeat = @(Model?.Trip?.Price ?? 0);
                totalPrice.value = (seats * pricePerSeat).toFixed(2);
            });
        });
    </script>
}